<%= form_for(project) do |f| %>
  <div class="form-group">
    <%= f.label :collaborators, "Collaborators (Email address)" %>
    <div>
      <%= f.select :collaborator_emails, User.all.map { |u| [u.email, u.email] }, { include_blank: true, :placeholder => 'User Name' }, { multiple: true, class: 'chosen-select add-users'} %>
    </div>
  </div>
  <div class="form-group">
  <%= f.hidden_field :project_id, value: project.id %>
  <%= f.hidden_field :owner_id, value: @user.id %>
  <%= f.submit "Add Users", class: "btn btn-primary"%>
  </div>
<% end %>